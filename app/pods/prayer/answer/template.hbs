<div class="row">
  <form role='form' {{action 'save' answer on='submit'}} class="col-xs-12">
    <div class="row">
      <div class="col-xs-12 form-group">
        {{textarea rows='3' value=answer placeholder='Answer to prayer' class='form-control'}}
      </div>
    </div>

    <div class="row action-footer">
      <div class="col-xs-12 col-sm-6">
        <button type="submit" class="btn btn-default">Save</button>
      </div>
    </div>
  </form>
</div>
