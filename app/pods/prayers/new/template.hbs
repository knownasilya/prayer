<div class="row">
  <form role='form' {{action 'save' prayer on='submit'}} class="col-xs-12">
    <div class="row">
      <div class="col-xs-12">
        {{textarea rows='3' value=prayer placeholder='Prayer' class='form-control' required='true'}}<br>
      </div>
    </div>

    <div class="row action-footer">
      <div class="col-xs-12 col-sm-6">
        <button type="submit" class='btn btn-default'>Save</button>
      </div>

      <div class="col-xs-12 col-sm-6 text-right">
        <div class="form-group">
          {{input type='checkbox' checked=firstLineIsTitle id='first-line-title'}}
          <label for="first-line-title">First line of prayer is the title</label>
        </div>
      </div>
    </div>
  </form>
</div>
